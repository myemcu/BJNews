<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!--<FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        />-->

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <RadioGroup
        android:id="@+id/rg_bottom_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_tab_bg">

        <RadioButton
            android:id="@+id/rb_home"
            android:text="首页"
            android:drawableTop="@drawable/rb_home_selector"
            style="@style/bottom_tag_style"
            />

        <RadioButton
            android:id="@+id/rb_newscenter"
            android:text="新闻中心"
            android:drawableTop="@drawable/rb_newscenter_selector"
            style="@style/bottom_tag_style"
            />

        <RadioButton
            android:id="@+id/rb_smartservices"
            android:text="智慧服务"
            android:drawableTop="@drawable/rb_smartservices_selector"
            style="@style/bottom_tag_style"
            />

        <RadioButton
            android:id="@+id/rb_govaffair"
            android:text="政要指南"
            android:drawableTop="@drawable/rb_govaffair_selector"
            style="@style/bottom_tag_style"
            />

        <RadioButton
            android:id="@+id/rb_setting"
            android:text="设置"
            android:drawableTop="@drawable/rb_setting_selector"
            style="@style/bottom_tag_style"
            />

    </RadioGroup>

</LinearLayout>