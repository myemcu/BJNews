<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:padding="10dp"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/checkbox"
        android:clickable="false"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/check_selector"/>

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/tm"
        android:layout_marginLeft="2dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="14sp"
            android:textColor="#bb000000"
            android:text="联想（Lenovo）拯救者14.0英寸游戏本（i7-4720HQ 4G 1T硬盘 GTX960M 2G独显 FHD IPS屏 背光键盘）黑 单价：5979.0"/>

        <TextView
            android:id="@+id/tv_price"
            android:text="￥1000"
            android:textSize="18sp"
            android:textColor="#bbff0000"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.example.administrator.bjnews.view.NumberAddSubView
            android:id="@+id/numberAddSubView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>