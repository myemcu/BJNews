<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:background="@drawable/number_add_sub_view_selector"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_sub"
        android:text="-"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="30dp"
        android:gravity="center"
        android:background="@drawable/btn_number_selector"
        android:layout_height="wrap_content" tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:gravity="center" tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/btn_add"
        android:text="+"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_width="30dp"
        android:gravity="center"
        android:background="@drawable/btn_number_selector"
        android:layout_height="wrap_content" tools:ignore="HardcodedText"/>

</LinearLayout>