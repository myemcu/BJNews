<?xml version="1.0" encoding="utf-8"?>
<tools:RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                      xmlns:tools="http://schemas.android.com/tools"
                            tools:ignore="UselessParent"> <!--AS让加的-->

<com.example.administrator.bjnews.view.HorizontalScrollViewPager
    android:id="@+id/vp_tabdetail_pager"
    android:layout_width="match_parent"
    android:layout_height="180dp"/>

<RelativeLayout
    android:layout_alignParentBottom="true"
    android:padding="8dp"
    android:background="#44000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        android:text="老婆大大"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" tools:ignore="HardcodedText,RtlHardcoded"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_point_group"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp" tools:ignore="RtlHardcoded"/>
</RelativeLayout>
</tools:RelativeLayout>